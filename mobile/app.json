{
  "expo": {
    "name": "ZanAI",
    "slug": "zanai",
    "version": "0.1.0",
    "orientation": "portrait",
    "platforms": ["ios", "android"],
    "scheme": "zanai",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Нужно для выбора фото в чат.",
        "NSPhotoLibraryAddUsageDescription": "Нужно для сохранения/кэширования выбранных файлов.",
        "NSCameraUsageDescription": "Нужно для съемки фото в чат.",
        "NSMicrophoneUsageDescription": "Нужно для записи голосовых сообщений.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    }
  }
}
